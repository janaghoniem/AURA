[
  {
    "action": "create_folder",
    "context": "system",
    "strategy": "system",
    "params": {
      "action_type": "create_folder",
      "folder_path": "{{desktop_path}}/Research_Reports/{{report_name}}_{{timestamp}}"
    },
    "task_id": "create_report_folder",
    "priority": "normal",
    "timeout": 10,
    "retry_count": 2
  },
  {
    "action": "extract_web_content",
    "context": "web",
    "strategy": "web",
    "params": {
      "action_type": "extract_web_content",
      "search_query": "{{research_topic}}",
      "search_engine": "bing"
    },
    "task_id": "extract_source_1",
    "priority": "normal",
    "timeout": 60,
    "retry_count": 2
  },
  {
    "action": "save_file",
    "context": "system",
    "strategy": "system",
    "params": {
      "action_type": "save_file",
      "file_path": "{{desktop_path}}/Research_Reports/{{report_name}}_{{timestamp}}/source_1_raw.txt",
      "content": "SOURCE 1: {{research_topic}}\n\nExtracted Content:\n{{web_content}}\n\nSource URL: {{source_url}}",
      "file_type": "txt"
    },
    "task_id": "save_source_1",
    "depends_on": "extract_source_1",
    "priority": "normal",
    "timeout": 30,
    "retry_count": 2
  },
  {
    "action": "save_file",
    "context": "system",
    "strategy": "system",
    "params": {
      "action_type": "save_file",
      "file_path": "{{desktop_path}}/Research_Reports/{{report_name}}_{{timestamp}}/research_summary.json",
      "content": "{\n  \"topic\": \"{{research_topic}}\",\n  \"timestamp\": \"{{timestamp}}\",\n  \"sources\": [\n    {\n      \"source_id\": 1,\n      \"url\": \"{{source_url}}\",\n      \"content_length\": {{content_length}},\n      \"extracted_at\": \"{{timestamp}}\"\n    }\n  ],\n  \"notes\": \"Automated research report generated by Execution Agent\"\n}",
      "file_type": "json"
    },
    "task_id": "save_summary",
    "depends_on": "save_source_1",
    "priority": "normal",
    "timeout": 30,
    "retry_count": 2
  },
  {
    "action": "open_app",
    "context": "local",
    "strategy": "local",
    "params": {
      "action_type": "open_app",
      "app_name": "Notepad"
    },
    "task_id": "open_notepad",
    "priority": "normal",
    "timeout": 15,
    "retry_count": 2
  },
  {
    "action": "type_text",
    "context": "local",
    "strategy": "local",
    "params": {
      "action_type": "type_text",
      "text": "RESEARCH REPORT: {{research_topic}}\n\nGenerated: {{timestamp}}\n\nSUMMARY:\n{{web_content}}\n\n---\nThis report was automatically generated by the Execution Agent.\nFiles saved to: {{desktop_path}}/Research_Reports/{{report_name}}_{{timestamp}}/"
    },
    "task_id": "type_report",
    "depends_on": "open_notepad",
    "priority": "normal",
    "timeout": 30,
    "retry_count": 2
  },
  {
    "action": "verify_file",
    "context": "system",
    "strategy": "system",
    "params": {
      "action_type": "verify_file",
      "folder": "{{desktop_path}}/Research_Reports/{{report_name}}_{{timestamp}}"
    },
    "task_id": "verify_files",
    "depends_on": "save_summary",
    "priority": "normal",
    "timeout": 10,
    "retry_count": 2
  }
]

